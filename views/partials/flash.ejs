<div class="toast align-items-center text-white bg-success border-0" id="success" role="alert" aria-live="assertive"
    aria-atomic="true" data-bs-delay="3500">
    <div class="d-flex">
        <div class="toast-body success-body">
            <%= success %>
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"
            aria-label="Close"></button>
    </div>
</div>
<div class="toast align-items-center text-white bg-danger  border-0" id="error" role="alert" aria-live="assertive"
    aria-atomic="true" data-bs-delay="3500">
    <div class="d-flex">
        <div class="toast-body error-body">
            <%= error %>
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"
            aria-label="Close"></button>
    </div>
</div>

<script src="/js/toast.js"></script>