<% layout('layouts/boilerplate') -%>

    <link rel="stylesheet" href="/css/style.css">

    <header class="position-relative">
        <img class="img-fluid" src="https://miro.medium.com/max/1400/1*7P8znG0tW7qmpOpZmSxj7w.png" alt="discord">
        <div class="header-text text-center position-absolute top-50 start-50 translate-middle mt-2 mt-md-0">
            <h1 class="fs-2">Find your community in Chatcord</h1>
            <p class="fs-6 d-none d-md-block">Theres a place for you.</p>
        </div>
    </header>

    <div class="container mt-5">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4">
            <h3>Explore communities</h3>
            <div>
                <button class="btn btn-success" type="button" data-bs-toggle="modal"
                    data-bs-target="#createGroupModal">Create
                    Community</button>
                <a href="/logout" class="btn btn-danger ms-3">Logout</a>
            </div>
        </div>
        <div class="modal fade" id="createGroupModal" tabindex="-1" aria-labelledby="createGroupModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="createGroupModalLabel">Create group</h5>
                        <button type="button" class="btn-close bg-white" data-bs-dismiss="modal"
                            aria-label="Close"></button>
                    </div>
                    <form action="" class="createGroupForm validation" novalidate>
                        <div class="modal-body">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="name" name="name"
                                    placeholder="Name of the group" required autofocus>
                                <label for="name">Name of the group</label>
                            </div>

                            <div class="form-floating">
                                <textarea name="description" class="form-control" id="description"
                                    placeholder="Description of the group" required></textarea>
                                <label for="description">Description of the group</label>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-primary">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 group-container">
            <% for (let community of communities) { %>
                <div class="col">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= community.name %>
                            </h5>
                            <p class="card-text">
                                <%= community.description %>
                            </p>
                            <a href="/<%= community.name %>" class="btn btn-primary w-100">Join</a>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/createGroup.js"></script>